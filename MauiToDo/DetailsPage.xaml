<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiToDo.ViewModels"
             x:Class="MauiToDo.DetailsPage"
             x:DataType="vm:DetailsViewModel"
             Title="{Binding Note.Title, Mode=TwoWay}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Title" FontAttributes="Bold" />
            <Entry Text="{Binding Note.Title}"  />

            <Label Text="Text" FontAttributes="Bold" />
            <Editor Text="{Binding Note.Text}" HeightRequest="200" />

            <Button Text="Save" Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>